<sql-mappings>
	<!-- 根据书籍编号查询书籍 -->
	<sql id='selectBooks'>
		select * 
		from tb_book --书籍表
		where book_id=? --这里可以填1
	</sql>
	<!-- 查询所有的书籍类型 -->
	<sql id='selectBookTypes'>
		select type_id,type_name from book_type
	</sql>
